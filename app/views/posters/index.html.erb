<%= render 'posters' %>

<div class="col-sm-8 text-center">
  <%= form_for Poster.new do |f| %>
    <div class="poster">
      <%= link_to image_tag(@poster.flickr_image), @poster.flickr_imagelink_url %>
      <h3><%= link_to @poster.subreddit_link_text, "#{@poster.subreddit_link_url}" %></h3>
      <%= f.hidden_field :text, value: "#{@poster.subreddit_text}" %>
      <%= f.hidden_field :image, value: "#{@poster.flickr_image}" %>
      <%= f.hidden_field :link, value: "#{@poster.subreddit_link}" %>
      <%= f.hidden_field :imageurl, value: "#{@poster.flickr_imagelink_url}" %>
    </div>
    <%= f.submit 'Save and Share', class: 'btn btn-primary' %>
  <% end %><br />

  <%= form_tag(posters_path, :method => 'get', id: 'subreddit-form') do %>
    <b>Use a different subreddit:</b> 
    <%= text_field_tag :subreddit, (params[:subreddit] || "quotes/new") %>
    <%= submit_tag "Click for a new poster!", class: "btn btn-primary" %>
  <% end %>
</div>    
